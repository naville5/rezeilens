  "components": {
    "schemas": {
      "AcknowledgePolicyRequest": {
        "type": "object",
        "properties": {
          "policyId": {
            "type": "string",
            "format": "uuid"
          },
          "acknowledgedBy": {
            "type": "string",
            "format": "uuid"
          }
        },
        "additionalProperties": false
      },
      "LoginModel": {
        "required": [
          "password",
          "username"
        ],
        "type": "object",
        "properties": {
          "username": {
            "minLength": 1,
            "type": "string"
          },
          "password": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "PolicyDto": {
        "required": [
          "createdBy",
          "policyTitle"
        ],
        "type": "object",
        "properties": {
          "policyTitle": {
            "maxLength": 200,
            "minLength": 1,
            "type": "string"
          },
          "description": {
            "maxLength": 500,
            "type": "string",
            "nullable": true
          },
          "createdBy": {
            "type": "string",
            "format": "uuid"
          }
        },
        "additionalProperties": false
      },
      "PublishPolicyDto": {
        "type": "object",
        "properties": {
          "policyId": {
            "type": "string",
            "format": "uuid"
          },
          "publish": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "SubmitRiskExceptionRequest": {
        "type": "object",
        "properties": {
          "policyId": {
            "type": "string",
            "format": "uuid"
          },
          "submittedBy": {
            "type": "string",
            "format": "uuid"
          },
          "reason": {
            "type": "string",
            "nullable": true
          },
          "durationInDays": {
            "type": "integer",
            "format": "int32"
          },
          "riskRating": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "UpdatePolicyRequest": {
        "type": "object",
        "properties": {
          "policyId": {
            "type": "string",
            "format": "uuid"
          },
          "policyTitle": {
            "type": "string",
            "nullable": true
          },
          "description": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "UpdateRiskExceptionStatusRequest": {
        "type": "object",
        "properties": {
          "riskExceptionId": {
            "type": "string",
            "format": "uuid"
          },
          "isApproved": {
            "type": "integer",
            "format": "int32"
          },
          "adminComments": {
            "type": "string",
            "nullable": true
          },
          "approvedBy": {
            "type": "string",
            "format": "uuid"
          }
        },
        "additionalProperties": false
      },
      "WeatherForecast": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "temperatureC": {
            "type": "integer",
            "format": "int32"
          },
          "summary": {
            "type": "string",
            "nullable": true
          },
          "temperatureF": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          }
        },
        "additionalProperties": false
      }
    }
